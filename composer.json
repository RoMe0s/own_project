{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "repositories"     : [
      {
        "type": "vcs",
        "url" : "git@github.com:Waavi/translation.git"
      }
    ],
    "require": {
        "php": ">=5.6.4",
        "laravel/framework": "5.3.*",
        "barryvdh/laravel-debugbar": "2.*",
        "intervention/image": "dev-master",
        "jenssegers/agent": "*",
        "orchestra/messages": "3.2.*",
        "bllim/datatables": "~1.5.0-alpha",
        "cartalyst/sentry": "dev-feature/laravel-5",
        "newway/tables_builder": "dev-master",
        "yaap/theme": "2.*",
        "laracasts/utilities": "~2.0",
        "barryvdh/laravel-elfinder": "*",
        "laravelrus/localized-carbon": "dev-master",
        "doctrine/dbal": "~2.3",
        "laravelcollective/html": "5.2.*",
        "pingpong/widget": "~2.0",
        "dimsav/laravel-translatable": "5.5",
        "mcamara/laravel-localization": "1.1.*",
        "nicolaslopezj/searchable": "1.*",
        "predis/predis": "^1.1"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "symfony/css-selector": "3.1.*",
        "barryvdh/laravel-ide-helper": "2.*",
        "symfony/dom-crawler": "3.1.*",
        "barryvdh/laravel-translation-manager": "dev-master"
    },
    "autoload": {
        "classmap": [
            "database",
            "app/Libraries"
        ],
        "files": [
          "app/Helpers/helpers.php",
          "app/Helpers/macroses.php"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
